{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [ "eslint:recommended" ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-debugger": "warn",
        "no-trailing-spaces": "off",
        "semi": ["warn"]
    }
}
